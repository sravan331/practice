package javabasicprogs;

import java.util.Scanner;

// Author sravan
// basic program of amstrong number 
public class Amstron {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
int a,n,r,s=0;
System.out.println("enter a number");
Scanner sc=new Scanner(System.in);
n=sc.nextInt();
a=n;
while(n>0) { // logic and formula
	r=n%10;
	s=s+r*r*r;
	n=n/10;
	}
if(a==s) { // checking condition
	System.out.println("Amstrong number:- "+a);
}
else {
	System.out.println("not amstrong:- "+a);
}
	}
}
